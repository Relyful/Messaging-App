generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id  Int @id @default(autoincrement())
  username String @unique
  password  String
  displayName String?
  role Role @default(USER)
  registerTime DateTime  @default(now())
  about String?
  profilePicId  Int?
  deletedAt DateTime?
  chatMembers ChatMember[]
  messages Message[]
}

model Chat {
  id Int @id @default(autoincrement())
  type ChatType @default(SOLO)
  name String?
  createdAt DateTime @default(now())
  chatMembers ChatMember[]
  messages Message[]
}

model Message {
  id  Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
  deletedAt DateTime?
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId Int
}

model ChatMember {
  chat  Chat  @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  @@id([chatId, userId])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text
  expiresAt   DateTime
}

enum Role {
  USER
  ADMIN
}

enum ChatType {
  SOLO
  GROUP
}